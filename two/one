// Write a C# program to show the string is immutable in c#.
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Lab.lab2
{
    internal class Qn1
    {
       class Program {
            static void Main()
            {
                string original = "Jenish";
                Console.WriteLine("Original string :" + original);

                string modify = original.Replace("J", "D");
                Console.WriteLine("replaced string is:" + modify);

                Console.WriteLine("Original string remains unchanged: " + original);
            }
        }
    }
}

// Write a C# program to add two digits using delegates.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Lab.lab2
{
    internal class Q2
    {
        public delegate int AddDelegate(int a, int b);

        class Program
        {
            // Method to add two digits
            public static int AddDigits(int x, int y)
            {
                return x + y;
            }

            static void Main(string[] args)
            {
                // Create delegate instance and point to AddDigits
                AddDelegate add = new AddDelegate(AddDigits);

                // Input values
                int num1 = 5;
                int num2 = 7;

                // Use delegate to add
                int result = add(num1, num2);

                Console.WriteLine("Sum of {0} and {1} is: {2}", num1, num2, result);
            }
        }
    }
}


// 3. Write a C# program to Add, Subtract, Multiply, Divide using Interface.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Lab.lab2
{   
   interface Icalculator
    {
        int Add(int a, int b);
        int Subtract(int a, int b);
        int Multiply(int a, int b);
        int Divide(int a, int b);
    }

    class Calculator : Icalculator
    {
        public int Add(int a, int b)
        {
            return (a + b);
        }

        public int Subtract(int a ,int b)
        {
            return (a - b);
        }

        public int Multiply(int a , int b)
        {
            return (a * b);
        }

        public int Divide(int a, int b)
        {
            if(b == 0)
            {
                Console.WriteLine("Cannot be divide ");
            }
            return (a / b);
        }
    }
    internal class Q3
    {
        static void Main()
        {
            Calculator calc = new Calculator();
            int a = 20;
            int b = 10;

            Console.WriteLine("Add of {a} and {b} is :" + calc.Add(a, b));
            Console.WriteLine("Subtract of {a} and {b} is :" + calc.Subtract(a, b));
            Console.WriteLine("Multiply of {a} and {b} is :" + calc.Multiply(a, b));
            Console.WriteLine("Divide  of {a} and {b} is :" + calc.Divide(a, b));
        }
    }
}
