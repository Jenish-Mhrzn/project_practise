// Create a program to display the result from the database using database first technique.

Install-Package EntityFramework

using lab4Q2;
using System;
using System.Linq;

namespace Lab4Q2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("=== Database First Demo ===");

            // Display all students first
            DisplayStudents();

            // Insert a new student
            InsertStudent("Ram", 17);

            // Update student with ID = 1
            UpdateStudent(1, "Bharat", 20);

            // Delete student with ID = 2
            DeleteStudent(2);

            // Display all students again
            DisplayStudents();

            Console.WriteLine("\nPress Enter to exit...");
            Console.ReadLine();
        }

        // === READ ===
        static void DisplayStudents()
        {
            using (var db = new MyDatabaseEntities()) // Replace with your actual DbContext name
            {
                Console.WriteLine("\n=== Student Records ===");
                var students = db.Students.ToList();

                if (students.Any())
                {
                    foreach (var s in students)
                    {
                        Console.WriteLine($"ID: {s.Id}, Name: {s.Name}, Age: {s.Age}");
                    }
                }
                else
                {
                    Console.WriteLine("No students found.");
                }
            }
        }

        // === CREATE ===
        static void InsertStudent(string name, int age)
        {
            using (var db = new MyDatabaseEntities())
            {
                var newStudent = new Student
                {
                    Name = name,
                    Age = age
                };

                db.Students.Add(newStudent);
                db.SaveChanges();

                Console.WriteLine($"\nInserted: {name}, Age {age}");
            }
        }

        // === UPDATE ===
        static void UpdateStudent(int id, string newName, int newAge)
        {
            using (var db = new MyDatabaseEntities())
            {
                var student = db.Students.FirstOrDefault(x => x.Id == id);
                if (student != null)
                {
                    student.Name = newName;
                    student.Age = newAge;
                    db.SaveChanges();

                    Console.WriteLine($"\nUpdated ID={id}: {newName}, Age {newAge}");
                }
                else
                {
                    Console.WriteLine($"\nNo student found with ID={id}");
                }
            }
        }

        // === DELETE ===
        static void DeleteStudent(int id)
        {
            using (var db = new MyDatabaseEntities())
            {
                var student = db.Students.FirstOrDefault(x => x.Id == id);
                if (student != null)
                {
                    db.Students.Remove(student);
                    db.SaveChanges();

                    Console.WriteLine($"\nDeleted student with ID={id}");
                }
                else
                {
                    Console.WriteLine($"\nNo student found with ID={id}");
                }
            }
        }
    }
}


// Database
-- 1️⃣ Create database (if it doesn't exist)
CREATE DATABASE MyDatabase;
GO

-- 2️⃣ Use the database
USE MyDatabase;
GO

-- 3️⃣ Create Students table
CREATE TABLE Students(
    Id INT IDENTITY(1,1) PRIMARY KEY,
    Name VARCHAR(100),
    Age INT
);
GO

-- 4️⃣ Insert initial students
INSERT INTO Students (Name, Age)
VALUES 
('Jenish', 10),
('Malik', 20);
GO