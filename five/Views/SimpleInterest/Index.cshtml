@model lab5.Models.SimpleInterestModel

<h2>Simple Interest Calculator</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label>Principal:</label>
        <input asp-for="Principal" type="number" step="0.01" required />
    </div>
    <div>
        <label>Rate (%):</label>
        <input asp-for="Rate" type="number" step="0.01" required />
    </div>
    <div>
        <label>Time (Years):</label>
        <input asp-for="Time" type="number" step="0.01" required />
    </div>
    <button type="submit">Calculate</button>
</form>
